   $(function () {
      $(".class").find('> .active').removeClass('active');
      $("#sent").addClass('active');
      $("#newtransfer a").css("padding-left","0px");


    });

</script>

<div id="loader-div">
  <img src="/assets/big-ajax-loader.gif">
</div>



