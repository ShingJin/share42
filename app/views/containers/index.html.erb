
 <%= render :partial =>"header" %>

<div id="folders_display" style="width:93.5%">


<div class="stats">


            <ul>

                <li><a href="#" class="count" style="padding-left:0px"><%= return_available_space(current_user) %></a><br><span>Availabe/Total space</span></li>
                <li><a href="#" class="count" ><%= @containers.count %></a><br><span>Folders/Transfers</span></li>
                
                <li><a href="#" class="count" title=""><%= number_to_human_size(current_user.storage) %></a><br><span>Space used</span></li>
                 <li><a href="#" class="count" title=""><%= @downloads %></a><br><span>Total Downloads</span></li>

                <li style="width:120px;"><a href="#" class="count"><%= return_plans(current_user) %></a><span>My Plan<a>Upgrade</a></span></li>

            </ul>
</div>



<% if @containers.count==0 %>         

<div class="tiptip" style="height:20px;width:600px;">
          <p>No transfers to show</p>
   

</div>
<% else %>

<div id="loader-div">
  <img src="/assets/big-ajax-loader.gif">
</div>

<div id="result-refinement">
  <div id="sort-by">
    <span id="sort-text">
      Sort by:
    </span>
    <ul id="sort-button">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle sort_toggle">Sent date</a>
              <ul class="dropdown-menu" style="margin-top:-21px;border-top:1px solid rgba(0, 0, 0, 0.2)">
              <li><%= sortable "exptime","Expiration date" %></li>
              <li><%= sortable "name","Container name" %></li>
              <li><%= sortable "downloaded","Downloads" %></li>
              <li><%= sortable "totalsize","Folder size" %></li>
              <li><%= sortable "created_at","Sent date" %></li>
            </ul>
            </li>
    </ul>
  </div>

</div>

<div id="dynamic_folder_display">
 <%= render :partial => "container",  :locals =>{:containers=>@containers} %>
</div>
<% end %>
</div>


