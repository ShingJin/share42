</style>

	<div class="signup_content">

<div class="callout-container">
<h1>Thanks for choosing 42Share!</h1>
<p class="about">
<strong>42Share</strong> is the best way to send big files from anywhere. You're just <strong>10 seconds</strong> away from your new 42Share account</p>




</div>



<div class="signup_left">


 <%= form_for @user,:html=>{:class=>"payment-form",:style=>"margin-bottom:0px;"} do |f| %>
  
  <span class="payment-errors"></span>

  <% if @user.errors.any? %>
    <div class="alert-message block-message warning">
    	<a class="close" href="#">Ã—</a>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<br>
<div class="clearfix">
            <label for="planSelect">Your plan:</label>
            <div class="input">
              <select name="planSelect" id="planSelect">
                <option value="personal">Personal ($10/month)</option>
                <option value="premium">Premium ($20/month)</option>
              </select>
            </div>
</div>










<h2 style="color:grey">The basics:</h2>  	

  <div class="clearfix">	
    <label for="xlInput">Email</label>
    <div class="input">
    	<%= f.text_field :email, :id=>"xlInput", :class=>"xlarge" %>
    </div>
  </div>
  

  </p>
  <p>
  <div class="clearfix">	
    <label for="xlInput">Password</label>
    <div class="input">
    <%= f.password_field :password, :id=>"xlInput", :class=>"xlarge" %>
   </div>
  </div>
  
  </p>
  <p>
  <div class="clearfix">	
    <label for="xlInput">Confirmation</label>
    <div class="input">
    <%= f.password_field :password_confirmation, :id=>"xlInput", :class=>"xlarge" %>
    </div>
  </div>
    



<h2 style="color:grey">Card Information:</h2>  	



            <div class="clearfix">
              <label for="xlInput3">Card Number</label>
              <div class="input">
                <input type="text" size="20" autocomplete="off" class="card-number xlarge span3" id="xlInput3" />
               </div>
            </div>
             <div class="clearfix">
              <label for="xlInput3">CVC</label>
              <div class="input">
                <input type="text" size="4" autocomplete="off" class="card-cvc xlarge span1" id="xlInput3"/>
            </div>
            </div>

             <div class="clearfix">
              <label for="xlInput3">Expiration</label>
              <div class="input">
                
                <input type="text" size="2" class="card-expiry-month span1" placeholder="MM"/>
                <span> / </span>
                <input type="text" size="4" class="card-expiry-year span2" placeholder="YYYY"/>
             </div>
            </div>



   
    
    
    
 <div style="padding-left:150px;"> 
        <input type="submit" class="btn primary submit-button" value="Create my account">
  <div>
  
<% end %>
</div>







	</div>
</div>
